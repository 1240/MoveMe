<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_item_selector"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/default_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_orders_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:tag="title"
            android:text="Диван, кресло, шкаф, кухонный гарнир"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dark_gray_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_orders_point_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:tag="start"
            android:text=" - ул. Бориса Галушкина 11, Москва"
            android:textColor="@color/dark_gray_text" />

        <TextView
            android:id="@+id/tv_orders_point_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="end"
            android:text=" - Шербаковская ул. 38, Москва"
            android:textColor="@color/dark_gray_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_orders_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:tag="tariff_first_2hours"
                android:text="5 000"
                android:textColor="@color/blue_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/money_sign"
                android:textColor="@color/blue_text"
                android:layout_marginLeft="@dimen/small_margin" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_orders_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_schedule"
                android:gravity="center"
                android:tag="dateTime"
                android:text="Сегодня, 18:00"
                android:textColor="@color/dark_gray_text_tranparent" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>